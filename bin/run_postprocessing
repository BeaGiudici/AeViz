#!/usr/bin/env python

import argparse
from AeViz.utils.path_utils import list_of_paths, add_paths
from AeViz.simulation.simulation import Simulation

parser = argparse.ArgumentParser()
parser.add_argument('--sim-name', type=str, required=True,
                    help="Name of the simulation of which postprocessing ' \
                        'will be done.")
parser.add_argument('--add-paths-file', nargs='+', type=str,
                    help="Expected one or multiple paths to file in string format.")

args = parser.parse_args()
path_list = list_of_paths(args.add_paths_file, args.add_paths)
add_paths(path_list)